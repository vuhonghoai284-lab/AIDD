# PostgreSQL 环境变量配置示例
# 复制为 .env 文件并填写实际值

# PostgreSQL 数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ai_docs
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_docs_db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI服务密钥
OPENAI_API_KEY=sk-your-openai-api-key-here
STRUCTURED_AI_API_KEY=your-structured-ai-api-key-here

# 第三方认证 - Gitee OAuth
GITEE_CLIENT_ID=your_gitee_client_id
GITEE_CLIENT_SECRET=your_gitee_client_secret

# JWT密钥（生产环境请更改）
JWT_SECRET_KEY=change_this_in_production_very_secure_secret_key

# 前端域名
FRONTEND_DOMAIN=http://localhost

# CORS开发模式（开发环境设为true）
CORS_DEVELOPMENT_MODE=true

# 服务器外部访问配置
EXTERNAL_HOST=localhost
EXTERNAL_PORT=8000
EXTERNAL_PROTOCOL=http