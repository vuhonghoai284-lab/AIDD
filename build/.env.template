# ============================================================================
# AI Document Testing System - 环境变量模板
# ============================================================================
# 复制此文件为 .env 并填入实际值
# 用于本地开发和部署配置
# ============================================================================

# ============================================================================
# 基础服务配置
# ============================================================================

# 前端端口
FRONTEND_PORT=3000

# 后端端口
BACKEND_PORT=8080

# Redis端口
REDIS_PORT=6379

# 部署模式 (dev|prod|test)
NODE_ENV=development
DEPLOY_MODE=dev

# 日志级别 (DEBUG|INFO|WARNING|ERROR)
LOG_LEVEL=INFO

# ============================================================================
# 数据库配置
# ============================================================================

# SQLite数据库文件路径（本地开发）
DATABASE_URL=sqlite:///./data/app.db

# MySQL配置（生产环境可选）
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=aidd_user
# MYSQL_PASSWORD=your_secure_password
# MYSQL_DATABASE=aidd_db

# PostgreSQL配置（生产环境可选）
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=aidd_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DATABASE=aidd_db

# ============================================================================
# Redis配置
# ============================================================================

# Redis连接URL
REDIS_URL=redis://localhost:6379/0

# Redis独立配置（可选）
REDIS_HOST=localhost
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# AI服务配置
# ============================================================================

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# 其他AI服务配置（可选）
# CLAUDE_API_KEY=your_claude_api_key
# GEMINI_API_KEY=your_gemini_api_key

# 是否启用AI服务Mock模式（开发用）
MOCK_AI_ENABLED=true

# ============================================================================
# 第三方认证配置
# ============================================================================

# Gitee OAuth配置
GITEE_OAUTH_ENABLED=false
GITEE_CLIENT_ID=your_gitee_client_id
GITEE_CLIENT_SECRET=your_gitee_client_secret

# GitHub OAuth配置（可选）
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth配置（可选）
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================================
# 安全配置
# ============================================================================

# JWT密钥（生产环境必须更改）
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production

# 会话密钥
SESSION_SECRET=your_session_secret_key

# 允许的主机列表（生产环境）
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ============================================================================
# 文件存储配置
# ============================================================================

# 文件上传目录
UPLOAD_DIR=./data/uploads

# 临时文件目录
TEMP_DIR=./data/temp

# 报告输出目录
REPORTS_DIR=./data/reports

# 最大文件大小（字节）
MAX_FILE_SIZE=10485760

# ============================================================================
# 邮件配置（可选）
# ============================================================================

# SMTP服务器配置
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true

# ============================================================================
# 监控和日志配置
# ============================================================================

# 是否启用性能监控
MONITORING_ENABLED=true

# 日志文件路径
LOG_FILE=./logs/app.log

# 日志文件最大大小（MB）
LOG_MAX_SIZE=10

# 日志文件保留数量
LOG_BACKUP_COUNT=5

# ============================================================================
# Docker配置
# ============================================================================

# Docker镜像标签
DOCKER_TAG=latest

# Docker仓库
DOCKER_REGISTRY=ghcr.io

# 是否推送镜像
PUSH_IMAGES=false

# ============================================================================
# 开发配置
# ============================================================================

# 是否启用调试模式
DEBUG=true

# 是否启用代码热重载
HOT_RELOAD=true

# 是否跳过认证（仅开发用）
SKIP_AUTH=false

# 是否启用API文档
ENABLE_DOCS=true

# 测试数据库URL（测试时使用）
TEST_DATABASE_URL=sqlite:///./data/test.db

# ============================================================================
# 部署配置
# ============================================================================

# 外部域名（生产环境）
# EXTERNAL_DOMAIN=your-domain.com

# 是否启用HTTPS
# ENABLE_HTTPS=true

# SSL证书路径
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# 备份配置
# BACKUP_DIR=./backups
# BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点

# ============================================================================
# 性能配置
# ============================================================================

# 工作进程数量
WORKERS=1

# 最大并发任务数
MAX_CONCURRENT_TASKS=5

# 任务超时时间（秒）
TASK_TIMEOUT=300

# Redis连接池大小
REDIS_POOL_SIZE=10

# 数据库连接池大小
DB_POOL_SIZE=10