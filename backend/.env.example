# AI文档测试系统环境变量配置示例
# 复制此文件为 .env 并填入实际值

# === 数据库配置 ===
DATABASE_TYPE=postgresql
# SQLite配置（开发环境）
# DATABASE_TYPE=sqlite

# PostgreSQL配置（推荐生产环境）
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ai_docs
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_docs_db

# MySQL配置（可选）
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=ai_docs_user
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=ai_docs_db

# === 服务器配置 ===
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false
RELOAD=false
WORKERS=1

# 外部访问配置
EXTERNAL_HOST=your_domain.com
EXTERNAL_PORT=443
EXTERNAL_PROTOCOL=https

# === 安全配置 ===
# JWT密钥（必须设置）
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here

# 管理员账号（生产环境必须修改）
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# === AI服务配置 ===
# OpenAI API配置
OPENAI_API_KEY=sk-your_openai_api_key_here

# === 第三方登录配置 ===
# Gitee OAuth配置
GITEE_CLIENT_ID=your_gitee_client_id
GITEE_CLIENT_SECRET=your_gitee_client_secret

# 前端域名配置
FRONTEND_DOMAIN=https://your_frontend_domain.com
OAUTH_REDIRECT_PATH=/third-login/callback

# === 缓存配置 ===
CACHE_STRATEGY=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# 开发环境可以使用内存缓存
# CACHE_STRATEGY=memory

# === CORS配置 ===
# 前端URL配置（开发环境）
FRONTEND_URL_1=http://localhost:3000
FRONTEND_URL_2=http://localhost:3001
FRONTEND_URL_3=http://localhost:5173
FRONTEND_URL_4=http://127.0.0.1:3000
FRONTEND_URL_5=http://127.0.0.1:5173

# 生产环境前端URL
FRONTEND_PRODUCTION_URL=https://your_production_frontend.com

# 开发模式CORS（开发环境设置为true）
CORS_DEVELOPMENT_MODE=false

# === 其他配置 ===
# 日志级别
LOG_LEVEL=INFO

# 性能监控
ENABLE_DB_QUERY_LOGGING=false
ENABLE_API_TIMING=true
ENABLE_MEMORY_MONITORING=false

# 安全功能
ENABLE_RATE_LIMITING=false
SCAN_UPLOADED_FILES=false
ENABLE_AUDIT_LOGGING=false